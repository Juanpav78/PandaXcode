---
import HeroLogo from "@/img/Logotipo.astro";
import Waves from "@/components/Waves.astro"
---

<section class="hero h-screen bg-blacking">
        
        <div class="contenedor h-full flex  flex-col justify-center items-center text-withing gap-3">
            <HeroLogo class=" w-44 h-auto" />
            <h2 class="text-5xl">{"<PandaX/>"}</h2>
            <h3 class="text-2xl bold text-degradado">Desarrollo Web</h3>
        </div>
        <Waves />
</section>


<style>
    .hero{
        user-select: none;
        background-image: url("../img/Star_Field.svg");
        animation: bgmove 25s ease-in-out infinite alternate;
        overflow: hidden;
    }

    @keyframes bgmove {
        0%{
            background-position: left;
        }

        25%{
            background-position: top;
        }
        50%{
            background-position: right;
        }
        75%{
            background-position: bottom;
        }
        100%{
            background-position: center;
        }
    }
</style>